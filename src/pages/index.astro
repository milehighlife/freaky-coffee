---
import logo from '../assets/logo_large.png?url';
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Freaky Coffee</title>
    <style>
      :root { --bg: #4e02a5; --logo-glow: rgba(255,225,0,0.25); }
      html, body { height: 100%; }
      body {
        margin: 0;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--bg);
        -webkit-font-smoothing: antialiased;
      }
      main { display: flex; align-items: center; justify-content: center; width: 100%; height: 100%; }
      .logo {
        filter: drop-shadow(0 0 24px var(--logo-glow));
        animation: float 4s ease-in-out infinite;
        width: auto;
        max-width: min(70vw, 480px);
        height: auto;
        display: block;
      }
      @keyframes float {
        0% { transform: scale(1) rotate(0deg); }
        50% { transform: scale(1.15) rotate(-1deg); }
        100% { transform: scale(1) rotate(0deg); }
      }
    </style>
  </head>
  <body>
    <main>
      <img src={logo} alt="Freaky Coffee Logo" class="logo" />
    </main>
  </body>
</html>